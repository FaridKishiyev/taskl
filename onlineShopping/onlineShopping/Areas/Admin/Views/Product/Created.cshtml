@model ProductVm

<div class="content-item">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="productname" class="form-label">Məhsul Adı</label>
            <input type="text" name="productName" class="form-control" id="productname" placeholder="Yazın..">
        </div>
        <div class="mb-3">
            <label for="productdescription" class="form-label">Məhsul haqqında</label>
            <input type="text" name="productDesc" class="form-control" id="productdescription" placeholder="Yazın..">
        </div>
         <div class="mb-3">
            <label for="productprice" class="form-label">Məhsulun satış qiyməti</label>
            <input type="text" name="productprice" class="form-control" id="productprice" placeholder="Yazın..">
        </div>
        <div class="mb-3">
            <label for="productcount" class="form-label">Məhsul sayı</label>
            <input type="text" name="productcount" class="form-control" id="productcount" placeholder="Yazın..">
        </div>

        <div class="mb-3">
            <select name="colorId" class="form-select" aria-label="Default select example">
                <option selected disabled>Rəng seçin</option>
                @foreach (var item in @Model.color)
                {
                    <option value="@item.Id">@item.ColorName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <select name="categoryId" class="form-select" aria-label="Default select example">
                <option selected>Kateqorya seçin</option>
                @foreach (var item in @Model.category)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <select name="brandId" class="form-select" aria-label="Default select example">
                <option selected>Brend seçin</option>
                @foreach (var item in @Model.mark)
                {
                    <option value="@item.Id">@item.BrandName</option>
                }
            </select>
        </div>
         <div class="mb-3">
            <select name="sizeId" class="form-select" aria-label="Default select example">
                <option selected>Ölçü seçin</option>
                @foreach (var item in @Model.size)
                {
                    <option value="@item.Id">@item.SizeValue</option>
                }
                
            </select>
        </div>
         <div class="mb-3">
            <label for="productImg" class="form-label">Logo</label>
            <input name="productImage" class="form-control" type="file" id="productImg">
        </div> 
        <button class="btn btn-primary" type="submit">Yarat</button>
        <button class="btn btn-secondary" type="reset">Sıfırla</button>
    </form>
</div>

