@model Category
<div class="content-item">
<form method="post" action="">
  <div class="mb-3" style="width:20%">
    <label asp-for="Name" class="form-label">New category</label>
    <input asp-for="Name" class="form-control"  aria-describedby="emailHelp" value="@Model.Name">
    <span asp-validation-for="Name" class="text-danger" style="z-index:1"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

</div>
