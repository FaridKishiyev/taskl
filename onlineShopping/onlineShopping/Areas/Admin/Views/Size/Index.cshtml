@model IEnumerable<Size>
@{
    int count = 0;
}
<div class="content-item">
    <a class="btn btn-primary" asp-controller="Size" asp-action="Created" >Ölçü Əlavə et</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ölçü</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th >@count</th>
                    <td>@item.SizeValue</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Size" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-primary" asp-controller="Size" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

