@model IEnumerable<Color>
@{
    int count = 0;
}
<div class="content-item">
    <a class="btn btn-primary" asp-controller="color" asp-action="created">Rəng Əlavə et</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Rəng adı</th>
                <th scope="col">Rəng kodu</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.ColorName</td>
                    <td>@item.ColorCode</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Color" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <a class="btn btn-danger" asp-controller="Color" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-primary" asp-controller="Color" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
