 <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-default-code">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">BrendPaltar</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Əsas səhifə</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="basket" asp-action="Index">Səbət</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-controller="productlist" asp-action="Index">Bütün Məhsullar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Message" asp-action="Index">Əlaqə</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link">@User.Identity.Name</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Log Out</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Index">Sign Up</a></li>
                        }

                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2"
                               type="search"
                               placeholder="Axtarış"
                               aria-label="Search" />
                        <button class="btn btn-outline-success btn-default-code" type="submit">
                            Axtarış
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>