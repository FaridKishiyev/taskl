</head>
<body>

    <partial name="_Menu" />

    <main>
        <section id="search">
            <div class="container">
                <div class="seacrh-menu" id="seacrh-menu">
                    <h4 class="search-button" id="search-button">
                        Ətraflı axtarış
                        <i class="fa-solid fa-angle-down" id="search-buttonI"></i>
                    </h4>
                    <div class="form-box" id="form-box">
                        <form method="post" asp-controller="ProductList" asp-action="Filter" class="row g-3">
                            <div class="col-md-6">
                                <select name="filterCat" class="form-select" aria-label="Default select example">
                                    <option selected disabled>Kateqorya</option>
                                    @foreach (var item in Model.category)
                                   {
                                       <option value="@item.Name">@item.Name</option>
                                   }
                                   
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select name="filterSize" class="form-select" aria-label="Default select example">
                                    <option selected disabled>Ölçü</option>
                                    @foreach (var item in Model.size)
                                   {
                                       <option value="@item.SizeValue">@item.SizeValue</option>
                                   }
                                   
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select name="filterBrand" class="form-select" aria-label="Default select example">
                                    <option selected disabled>Brend</option>
                                    @foreach (var item in Model.mark)
                                   {
                                       <option value="@item.BrandName">@item.BrandName</option>
                                   }
                                   
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select name="filterColor" class="form-select" aria-label="Default select example">
                                    <option selected disabled>Rəng</option>
                                    @foreach (var item in Model.color)
                                   {
                                       <option value="@item.ColorName">@item.ColorName</option>
                                   }
                                   
                                </select>
                            </div>
                           
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary" >Axtar</button>
                                <button type="reset" class="btn btn-primary" >Sıfırla</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <section id="brands">
            <div class="container">
                <h2>Markalar</h2>
                <section class="customer-logos slider">

                    @foreach (var item in Model.mark)
                    {
                        <div class="slide">
                            <img src="~/assets/img/@item.ImageString" />
                        </div>
                    }

                </section>
            </div>
        </section>

        <section id="koynek">
            <h4>Köynək</h4>
            <div class="slideshow">
                <div class="content">
                    <div class="slider-content">
                        @for (var i = 0; i < 9 && i < @Model.products.Count; i++)
                        {
                            <figure class="shadow">
                                <img src="~/assets/img/@Model.products[i].ImageString" />
                            </figure>
                        }


                    </div>
                </div>
            </div>
        </section>
