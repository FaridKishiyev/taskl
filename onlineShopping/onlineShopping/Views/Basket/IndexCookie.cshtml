    <partial name="_Menu" />
    <main>


        <div class="container">

            <section id="cart">

                @foreach (var item in Model.basketProduct )
                {
                    double allPrice = item.price * item.BasketCount;

                    


                    <article class="product">
                        <header>
                            <a class="remove" asp-controller="Basket" asp-action="RemoveBasket" asp-route-id="@item.Id">
                                <img src="http://www.astudio.si/preview/blockedwp/wp-content/uploads/2012/08/1.jpg" alt="">
                                @if (item.basketBuy == true)
                                {
                                    <h3>Aldiz</h3>
                                }
                                else
                                {
                                    <h3>Remove product</h3>
                                }
                            </a>
                        </header>

                        <div class="content">

                            <h1>@item.ProductName</h1>

                            @item.ProductDesc

                            <div title=""  class="color yellow"></div>
                           @foreach (var product in Model.products)
                            {
                                if (product.Id == @item.Id )
                                {
                                    <div style="top: 43px" class="type small">@product.size.SizeValue</div>
                                }
                            }
                            
                        </div>

                        <footer class="content">
                            <a asp-controller="basket" asp-action="ReduceBasket" asp-route-id="@item.Id"><span class="qt-minus">-</span></a>
                            <span class="qt">@item.BasketCount</span>
                            <a asp-controller="basket" asp-action="AddBasket" asp-route-id="@item.Id"><span class="qt-plus">+</span></a>

                            <h2 class="full-price">
                                @allPrice 
                            </h2>

                            <h2 class="price">
                                  @item.price                                
                            </h2>
                        </footer>
                    </article>
                }



            </section>

        </div>

        <div id="site-footer">
            <div class="container clearfix">
                @foreach (var item in Model.basketProduct )
                {
                    double allPrice = item.price * item.BasketCount;
                    totalPrice += allPrice;

                    edv = Math.Floor( totalPrice * 0.18);

                    checkPrice = edv + totalPrice + kuryer;
                }
                <div class="left">
                    <h2 class="subtotal">Məhsullar: <span>@totalPrice</span>$</h2>
                    <h3 class="tax">Ədv (18%): <span>@edv</span>$</h3>
                    <h3 class="shipping">Çatdırılma: <span>@kuryer</span>$</h3>
                </div>
                  
                <div class="right">
                    <h1 class="total">Total: <span> @checkPrice </span>$</h1>
                    <a class="btn" asp-controller="basket" asp-action="BuyBasket">Checkout</a>
                </div>
                

            </div>
        </div>
