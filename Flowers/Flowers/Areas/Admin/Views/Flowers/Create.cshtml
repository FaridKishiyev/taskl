@model Flower
<form method="post">
  <div class="mb-3" style="width:20%">
    <label asp-for="Flowername" class="form-label">Email address</label>
    <input asp-for="Flowername" class="form-control"  aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3"  style="width:20%">
    <label asp-for="FlowerDescription" class="form-label">Password</label>
    <input type="password" name="FlowerDescription" class="form-control" id="exampleInputPassword1">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

