@model IEnumerable<FlowerCategory>

@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Category</h4>
                    <p class="card-description"><a class="btn btn-info" asp-controller="Category" asp-action="Create" >Create</a>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> name </th>
                            <th> </th>
                           
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                        {
                            count++;
                             <tr>
                                <td> @count </td>
                                <td> @item.CategoryName </td>
                                <td> <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a> 
                                     </td>
                              </tr>
                        }
                         
                         
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

